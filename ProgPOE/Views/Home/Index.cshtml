@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Contract Monthly Claim System</h1>
    <p>Manage lecturer claims efficiently.</p>
</div>

<div class="row mt-5">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Lecturer</h5>
                <p class="card-text">Submit and track your monthly claims.</p>
                <form asp-action="SwitchRole" method="get">
                    <input type="hidden" name="userId" value="1" />
                    <button type="submit" class="btn btn-primary">Switch to Lecturer</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Programme Coordinator</h5>
                <p class="card-text">Review and approve lecturer claims.</p>
                <form asp-action="SwitchRole" method="get">
                    <input type="hidden" name="userId" value="2" />
                    <button type="submit" class="btn btn-success">Switch to Coordinator</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Academic Manager</h5>
                <p class="card-text">Final approval of submitted claims.</p>
                <form asp-action="SwitchRole" method="get">
                    <input type="hidden" name="userId" value="3" />
                    <button type="submit" class="btn btn-warning">Switch to Manager</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Human Resources</h5>
                <p class="card-text">Manage lecturers and generate reports.</p>
                <form asp-action="SwitchRole" method="get">
                    <input type="hidden" name="userId" value="4" />
                    <button type="submit" class="btn btn-info">Switch to HR</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Current User Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> @ViewBag.CurrentUser?.UserName</p>
                <p><strong>Role:</strong> @ViewBag.CurrentUser?.UserRole</p>
                <a href="@Url.Action("Dashboard")" class="btn btn-primary">Go to Dashboard</a>
            </div>
        </div>
    </div>
</div>