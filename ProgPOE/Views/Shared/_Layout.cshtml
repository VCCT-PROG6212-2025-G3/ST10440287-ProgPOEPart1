@* Views/Shared/_Layout.cshtml - Main Layout (Visual Prototype) *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-custom {
            background-color: #2c5aa0;
        }

        .card-stat {
            border-left: 4px solid;
            margin-bottom: 20px;
        }

        .card-pending {
            border-left-color: #ffc107;
        }

        .card-approved {
            border-left-color: #28a745;
        }

        .card-rejected {
            border-left-color: #dc3545;
        }

        .card-total {
            border-left-color: #007bff;
        }

        .status-pending {
            background-color: #ffc107;
            color: white;
        }

        .status-approved {
            background-color: #28a745;
            color: white;
        }

        .status-rejected {
            background-color: #dc3545;
            color: white;
        }

        .prototype-notice {
            background-color: #e7f3ff;
            border: 1px solid #b3d9ff;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    📋 Contract Monthly Claim System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Dashboard">🏠 Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="SubmitClaim">📝 Submit Claim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="MyClaims">📋 My Claims</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ApproveClaims">✅ Review Claims</a>
                        </li>
                    </ul>
                    <div class="navbar-text">
                        👤 Welcome, @ViewBag.UserName
                        <span class="badge bg-info">@ViewBag.UserRole</span>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="prototype-notice">
            <strong>📢 Visual Prototype Notice:</strong> This is a non-functional GUI prototype for demonstration purposes only.
            No actual data processing occurs.
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                ✅ @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CMCS Visual Prototype | PROG6212 Assignment
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>