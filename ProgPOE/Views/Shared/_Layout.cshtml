<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgPOE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProgPOE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProgPOE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                        </li>

                        @if (Context.Session.GetString("UserRole") == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SubmitClaim">Submit Claim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MyClaims">My Claims</a>
                            </li>
                        }

                        @if (Context.Session.GetString("UserRole") == "ProgrammeCoordinator" ||
                        Context.Session.GetString("UserRole") == "AcademicManager")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ApproveClaims">Approve Claims</a>
                            </li>
                        }

                        @if (Context.Session.GetString("UserRole") == "HR")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="HR" asp-action="Dashboard">HR Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="HR" asp-action="ManageLecturers">Manage Lecturers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="HR" asp-action="Reports">Reports</a>
                            </li>
                        }
                    </ul>

                    @* User Role Display - Top Right *@
                    <div class="d-flex align-items-center">
                        <span class="navbar-text me-3">
                            <strong>@Context.Session.GetString("UserName")</strong>
                            (@Context.Session.GetString("UserRole"))
                        </span>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="switchRoleDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                Switch Role
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="switchRoleDropdown">
                                <li>
                                    <form asp-action="SwitchRole" asp-controller="Home" method="get" class="dropdown-item-form">
                                        <input type="hidden" name="userId" value="1" />
                                        <button type="submit" class="dropdown-item">Lecturer (John Smith)</button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="SwitchRole" asp-controller="Home" method="get" class="dropdown-item-form">
                                        <input type="hidden" name="userId" value="2" />
                                        <button type="submit" class="dropdown-item">Programme Coordinator (Jane Wilson)</button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="SwitchRole" asp-controller="Home" method="get" class="dropdown-item-form">
                                        <input type="hidden" name="userId" value="3" />
                                        <button type="submit" class="dropdown-item">Academic Manager (Mike Johnson)</button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="SwitchRole" asp-controller="Home" method="get" class="dropdown-item-form">
                                        <input type="hidden" name="userId" value="4" />
                                        <button type="submit" class="dropdown-item">HR (Sarah Adams)</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error!</strong> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Warning!</strong> @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <strong>Info:</strong> @Html.Raw(TempData["Info"])
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ProgPOE - <a asp-area="" asp-controller="Home" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>