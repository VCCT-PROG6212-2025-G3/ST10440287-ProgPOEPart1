@model ProgPOE.Models.ManageLecturerViewModel
@{
    ViewData["Title"] = "Create Lecturer";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h2>➕ Create New Lecturer</h2>
                <p class="mb-0">Add a new lecturer to the system</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">👤 Lecturer Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateLecturer" method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label fw-bold"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label fw-bold"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold"></label>
                        <input asp-for="Username" class="form-control" placeholder="e.g., john.smith" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <small class="text-muted">Username must be unique</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="lecturer@university.ac.za" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small class="text-muted">Email must be unique</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Department" class="form-label fw-bold"></label>
                        <input asp-for="Department" class="form-control" placeholder="e.g., Computer Science" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DefaultHourlyRate" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">R</span>
                            <input asp-for="DefaultHourlyRate" class="form-control" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="DefaultHourlyRate" class="text-danger"></span>
                        <small class="text-muted">Standard rate: R450.00</small>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label fw-bold">
                                Active Account
                            </label>
                        </div>
                        <small class="text-muted">Inactive accounts cannot submit claims</small>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("ManageLecturers")" class="btn btn-secondary btn-lg">
                            ← Cancel
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            ✅ Create Lecturer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}